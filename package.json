{
  "name": "prescription-assistant",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build --turbopack",
    "start": "next start",
    "test:setup": "node test-setup.js",
    "ws:server": "node websocket-server.js",
    "ws:assemblyai": "node websocket-server-assemblyai.js",
    "ws:assemblyai-rest": "node websocket-server-assemblyai-rest.js",
    "dev:full": "concurrently \"npm run ws:server\" \"npm run dev\"",
    "dev:assemblyai": "concurrently \"npm run ws:assemblyai\" \"npm run dev\"",
    "dev:assemblyai-rest": "concurrently \"npm run ws:assemblyai-rest\" \"npm run dev\"",
    "start:full": "concurrently \"npm run ws:server\" \"npm run start\"",
    "start:assemblyai": "concurrently \"npm run ws:assemblyai\" \"npm run start\"",
    "start:assemblyai-rest": "concurrently \"npm run ws:assemblyai-rest\" \"npm run start\""
  },
  "dependencies": {
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "next": "15.5.4",
    "@google-cloud/speech": "^6.7.0",
    "openai": "^4.70.0",
    "lucide-react": "^0.460.0",
    "dotenv": "^16.4.5",
    "ws": "^8.18.0",
    "assemblyai": "^4.0.0",
    "axios": "^1.7.0"
  },
  "devDependencies": {
    "typescript": "^5",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@tailwindcss/postcss": "^4",
    "tailwindcss": "^4",
    "concurrently": "^8.2.2",
    "@types/ws": "^8.5.10"
  }
}
